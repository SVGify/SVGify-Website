---
import '../global.css';
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-GNQMY7THV1"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag('js', new Date());

			gtag('config', 'G-GNQMY7THV1');
		</script>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
			integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
		<title>{title}</title>
		<link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
	</head>
	<body class="bg-base-200 min-h-screen pt-10 md:pt-20 overflow-x-hidden" id="top-jump">
		<slot />
		<script is:inline src="/scripts/wow.js"></script>
		<script is:inline>
			new WOW().init();
		</script>
		<script is:inline>
			document.querySelectorAll('.buyNowButton').forEach((button) => {
				button.addEventListener('click', () => {
					gtag('event', 'click', {
						event_category: 'Buy Now Button',
						event_label: 'Buy Now Click'
					});
				});
			});

			document.querySelector('#downloadButton').addEventListener('click', () => {
				gtag('event', 'click', {
					event_category: 'Download Button',
					event_label: 'Download Click'
				});
			});
		</script>
	</body>
</html>
